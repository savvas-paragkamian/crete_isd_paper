YEAR = {2020},
NUMBER = {8},
ARTICLE-NUMBER = {199},
URL = {https://www.mdpi.com/2079-7737/9/8/199},
PubMedID = {32751787},
ISSN = {2079-7737},
ABSTRACT = {Human-induced biodiversity loss has been accelerating since the industrial revolution. The climate change impacts will severely alter the biodiversity and biogeographical patterns at all scales, leading to biotic homogenization. Due to underfunding, a climate smart, conservation-prioritization scheme is needed to optimize species protection. Spatial phylogenetics enable the identification of endemism centers and provide valuable insights regarding the eco-evolutionary and conservation value, as well as the biogeographical origin of a given area. Many studies exist regarding the conservation prioritization of mainland areas, yet none has assessed how climate change might alter the biodiversity and biogeographical patterns of an island biodiversity hotspot. Thus, we conducted a phylogenetically informed, conservation prioritization study dealing with the effects of climate change on Crete&rsquo;s plant diversity and biogeographical patterns. Using several macroecological analyses, we identified the current and future endemism centers and assessed the impact of climate change on the biogeographical patterns in Crete. The highlands of Cretan mountains have served as both diversity cradles and museums, due to their stable climate and high topographical heterogeneity, providing important ecosystem services. Historical processes seem to have driven diversification and endemic species distribution in Crete. Due to the changing climate and the subsequent biotic homogenization, Crete&rsquo;s unique bioregionalization, which strongly reminiscent the spatial configuration of the Pliocene/Pleistocene Cretan paleo-islands, will drastically change. The emergence of the &lsquo;Anthropocene&rsquo; era calls for the prioritization of biodiversity-rich areas, serving as mixed-endemism centers, with high overlaps among protected areas and climatic refugia.},
DOI = {10.3390/biology9080199}
}
@article{Mikryukov2023,
author = {Vladimir Mikryukov  and Olesya Dulya  and Alexander Zizka  and Mohammad Bahram  and Niloufar Hagh-Doust  and Sten Anslan  and Oleh Prylutskyi  and Manuel Delgado-Baquerizo  and Fernando T. Maestre  and Henrik Nilsson  and Jaan Pärn  and Maarja Öpik  and Mari Moora  and Martin Zobel  and Mikk Espenberg  and Ülo Mander  and Abdul Nasir Khalid  and Adriana Corrales  and Ahto Agan  and Aída-M. Vasco-Palacios  and Alessandro Saitta  and Andrea Rinaldi  and Annemieke Verbeken  and Bobby Sulistyo  and Boris Tamgnoue  and Brendan Furneaux  and Camila Duarte Ritter  and Casper Nyamukondiwa  and Cathy Sharp  and César Marín  and Daniyal Gohar  and Darta Klavina  and Dipon Sharmah  and Dong-Qin Dai  and Eduardo Nouhra  and Elisabeth Machteld Biersma  and Elisabeth Rähn  and Erin Cameron  and Eske De Crop  and Eveli Otsing  and Evgeny Davydov  and Felipe Albornoz  and Francis Brearley  and Franz Buegger  and Geoffrey Zahn  and Gregory Bonito  and Inga Hiiesalu  and Isabel Barrio  and Jacob Heilmann-Clausen  and Jelena Ankuda  and Jiri Doležal  and John Kupagme  and Jose Maciá-Vicente  and Joseph Djeugap Fovo  and József Geml  and Juha Alatalo  and Julieta Alvarez-Manjarrez  and Kadri Põldmaa  and Kadri Runnel  and Kalev Adamson  and Kari-Anne Bråthen  and Karin Pritsch  and Kassim Tchan Issifou  and Kęstutis Armolaitis  and Kevin Hyde  and Kevin K. Newsham  and Kristel Panksep  and Adebola Azeez Lateef  and Linda Hansson  and Louis Lamit  and Malka Saba  and Maria Tuomi  and Marieka Gryzenhout  and Marijn Bauters  and Meike Piepenbring  and Nalin N. Wijayawardene  and Nourou Yorou  and Olavi Kurina  and Peter Mortimer  and Peter Meidl  and Petr Kohout  and Rasmus Puusepp  and Rein Drenkhan  and Roberto Garibay-Orijel  and Roberto Godoy  and Saad Alkahtani  and Saleh Rahimlou  and Sergey Dudov  and Sergei Põlme  and Soumya Ghosh  and Sunil Mundra  and Talaat Ahmed  and Tarquin Netherway  and Terry Henkel  and Tomas Roslin  and Vincent Nteziryayo  and Vladimir Fedosov  and Vladimir Onipchenko  and Weeragalle Arachchillage Erandi Yasanthika  and Young Lim  and Michael Van Nuland  and Nadejda Soudzilovskaia  and Alexandre Antonelli  and Urmas Kõljalg  and Kessy Abarenkov  and Leho Tedersoo },
title = {Connecting the multiple dimensions of global soil fungal diversity},
journal = {Science Advances},
volume = {9},
number = {48},
pages = {eadj8016},
year = {2023},
doi = {10.1126/sciadv.adj8016},
URL = {https://www.science.org/doi/abs/10.1126/sciadv.adj8016},
eprint = {https://www.science.org/doi/pdf/10.1126/sciadv.adj8016},
abstract = {How the multiple facets of soil fungal diversity vary worldwide remains virtually unknown, hindering the management of this essential species-rich group. By sequencing high-resolution DNA markers in over 4000 topsoil samples from natural and human-altered ecosystems across all continents, we illustrate the distributions and drivers of different levels of taxonomic and phylogenetic diversity of fungi and their ecological groups. We show the impact of precipitation and temperature interactions on local fungal species richness (alpha diversity) across different climates. Our findings reveal how temperature drives fungal compositional turnover (beta diversity) and phylogenetic diversity, linking them with regional species richness (gamma diversity). We integrate fungi into the principles of global biodiversity distribution and present detailed maps for biodiversity conservation and modeling of global ecological processes. Water–energy balance defines fungal alpha diversity, while energy variability links phylogenetic, beta, and gamma diversity.}}

@article{Aslani2022,
author = {Aslani, Farzad and Geisen, Stefan and Ning, Daliang and Tedersoo, Leho and Bahram, Mohammad},
