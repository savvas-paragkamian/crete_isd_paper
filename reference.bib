}


@article{Vasar2022,
author = {Vasar, Martti and Davison, John and Sepp, Siim-Kaarel and Mucina, Ladislav and Oja, Jane and Al-Quraishy, Saleh and Anslan, Sten and Bahram, Mohammad and Bueno, C. Guillermo and Cantero, Juan José and Decocq, Guillaume and Fraser, Lauchlan and Hiiesalu, Inga and Hozzein, Wael N. and Koorem, Kadri and Meng, Yiming and Moora, Mari and Onipchenko, Vladimir and Öpik, Maarja and Pärtel, Meelis and Vahter, Tanel and Tedersoo, Leho and Zobel, Martin},
title = {Global soil microbiomes: A new frontline of biome-ecology research},
journal = {Global Ecology and Biogeography},
